        if (ppp && window.innerWidth < 1000) {
                document.write('\x3Cscript type="text/javascript" src="https://player.twitch.tv/js/embed/v1.js">\x3C/script>');
                document.write('<div id="fextrastream" style="width:100%;height:198px;text-align:center;display:none;"></div>');
        }
</script>
